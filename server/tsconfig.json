    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "lib": ["esnext"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]
  }
  